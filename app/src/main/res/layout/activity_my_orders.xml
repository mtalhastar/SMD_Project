<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:weightSum="2"
tools:context=".MyOrdersActivity"
android:orientation="vertical">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="0"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10sp"
        android:weightSum="2"
        android:gravity="start|center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:layout_gravity="center"
            android:id="@+id/reportBack"
            android:src="@drawable/arrow_back"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Orders"
            android:layout_weight="1.7"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:textSize="40sp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:backgroundTint="#CDCDCD"
         />

</LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="2"
    android:padding="30sp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="20sp"
        android:backgroundTint="#EDEDED"
        android:weightSum="2"
        android:paddingVertical="10sp"
        android:background="@drawable/input_field"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5sp"
            android:layout_gravity="center"
            android:layout_weight="1"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Icecream - Zombie"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="5sp"
                android:textColor="@color/black"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vanilla-Strawberry"
                android:layout_marginBottom="10sp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20$ x 2"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="10sp"
                android:textColor="@color/black"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="House Address"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="5sp"
                android:textColor="@color/black"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="727-F Block , K-Society , Karachi"
                android:layout_marginBottom="10sp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sub Total: "
                    android:textSize="16sp"
                    android:layout_weight="0"
                    android:textStyle="bold"
                    android:layout_marginBottom="5sp"
                    android:textColor="@color/black"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="400$"
                    android:textSize="16sp"
                    android:layout_marginBottom="5sp"
                    android:textColor="@color/black"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:text="To Be Delivered"
                    android:textSize="16sp"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:layout_marginBottom="5sp"
                    android:textColor="#DAB607"
                    />

                <TextView
                    android:layout_width="0sp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="#4739493894hbbfbjduf"
                    android:textSize="14sp"
                    android:layout_gravity="end"
                    android:gravity="end"
                    android:textStyle="bold"
                    android:layout_marginBottom="5sp"
                    android:textColor="#FF0000"
                    />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="20sp"
        android:layout_marginTop="20sp"
        android:backgroundTint="#EDEDED"
        android:weightSum="2"
        android:paddingVertical="10sp"
        android:background="@drawable/input_field"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5sp"
            android:layout_gravity="center"
            android:layout_weight="1"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Icecream - Zombie"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="5sp"
                android:textColor="@color/black"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vanilla-Strawberry"
                android:layout_marginBottom="10sp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20$ x 2"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="10sp"
                android:textColor="@color/black"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="House Address"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="5sp"
                android:textColor="@color/black"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="727-F Block , K-Society , Karachi"
                android:layout_marginBottom="10sp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sub Total: "
                    android:textSize="16sp"
                    android:layout_weight="0"
                    android:textStyle="bold"
                    android:layout_marginBottom="5sp"
                    android:textColor="@color/black"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="400$"
                    android:textSize="16sp"
                    android:layout_marginBottom="5sp"
                    android:textColor="@color/black"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:text="Completed"
                    android:textSize="16sp"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:layout_marginBottom="5sp"
                    android:textColor="#2BA600"
                    />

                <TextView
                    android:layout_width="0sp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="#4739493894hbbfbjduf"
                    android:textSize="14sp"
                    android:layout_gravity="end"
                    android:gravity="end"
                    android:textStyle="bold"
                    android:layout_marginBottom="5sp"
                    android:textColor="#FF0000"
                    />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="70sp"
    android:weightSum="4"
    android:layout_alignParentBottom="true"
    android:gravity="center"
    android:paddingHorizontal="10sp"
    android:background="@drawable/navbar"
    android:orientation="horizontal"
    >

    <ImageButton
        android:layout_width="0sp"
        android:layout_height="50sp"
        android:layout_weight="1"
        android:background="@color/black"
        android:src="@drawable/person"/>

    <ImageButton
        android:layout_width="0sp"
        android:layout_height="50sp"
        android:layout_weight="1"
        android:background="@color/black"
        android:src="@drawable/cart"/>

    <ImageButton
        android:layout_width="0sp"
        android:layout_height="50sp"
        android:layout_weight="1"
        android:background="@color/black"
        android:src="@drawable/favorite"/>

    <ImageButton
        android:layout_width="0sp"
        android:layout_height="50sp"
        android:layout_weight="1"
        android:background="@color/black"
        android:src="@drawable/order"/>

</LinearLayout>

</LinearLayout>